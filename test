local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local isPressingR = true -- Set to false to stop the script

local function pressRKey()
    -- Continuously presses and releases the "R" key
    while isPressingR do
        UserInputService:SendKeyEvent(true, Enum.KeyCode.R, false, nil) -- Key down
        wait(0.1) -- Adjust delay between presses as needed
        UserInputService:SendKeyEvent(false, Enum.KeyCode.R, false, nil) -- Key up
        wait(0.1) -- Adjust delay between cycles as needed
    end
end

-- Start pressing the "R" key
RunService.Heartbeat:Connect(pressRKey)

-- To stop the continuous pressing of "R" key, set `isPressingR` to false
