-- Services
local Players = game:GetService("Players")
local VirtualInputManager = game:GetService("VirtualInputManager")

-- Get the local player and the target button
local player = Players.LocalPlayer
local button = player:WaitForChild("PlayerGui"):WaitForChild("Main"):WaitForChild("Mobile"):WaitForChild("Holder"):WaitForChild("Guard")

-- Function to hold the button press
local function holdPressButton()
-- Find the absolute position of the button
local absolutePosition = button.AbsolutePosition
local absoluteSize = button.AbsoluteSize

-- Calculate the center of the button
local center = Vector2.new(absolutePosition.X + (absoluteSize.X / 2), absolutePosition.Y + (absoluteSize.Y / 2))

-- Simulate the touch using VirtualInputManager
VirtualInputManager:SendMouseButtonEvent(center.X, center.Y, 0, true, button, 0) -- Simulate mouse down
wait(15) -- Hold the button for 1 second, adjust this time as needed
VirtualInputManager:SendMouseButtonEvent(center.X, center.Y, 0, false, button, 0) -- Simulate mouse up
end

-- Call the function to hold press the button
holdPressButton()
